<h1><%= @author.name %></h1>

<h2>Books by <%= @author.name %></h2>
<ul>
  <% @author.books.each do |book| %>
    <li><%= book.title %> (Published: <%= book.publication_date %>)</li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_author_path(@author), class: 'btn btn-warning' %>
<%= link_to 'Back to Authors', authors_path, class: 'btn btn-secondary' %>
