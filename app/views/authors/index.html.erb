<h1>Authors</h1>

<%= link_to 'New Author', new_author_path, class: 'btn btn-success' %>

<ul>
  <% @authors.each do |author| %>
    <li>
      <strong><%= author.name %></strong>
      <%= link_to 'Show', author_path(author), class: 'btn btn-info' %>
      <%= link_to 'Edit', edit_author_path(author), class: 'btn btn-warning' %>
      <%= link_to 'Delete', author_path(author), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>
