<h1>Books</h1>

<%= link_to 'New Book', new_book_path, class: 'btn btn-success' %>

<ul>
  <% @books.each do |book| %>
    <li>
      <strong><%= book.title %></strong> by <%= book.author.name %> 
      (Published: <%= book.publication_date %>)
      <span class="badge <%= book.status == 'taken' ? 'bg-danger' : 'bg-success' %>">
        <%= book.status&.capitalize || "Unknown" %>
      </span>
      <%= link_to 'Show', book_path(book), class: 'btn btn-info' %>
      <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %>
      <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>
