<h1><%= @book.title %></h1>
<p>By: <%= @book.author.name %></p>
<p>Published on: <%= @book.publication_date %></p>
<p>Status: 
  <span class="badge <%= @book.status == 'taken' ? 'bg-danger' : 'bg-success' %>">
    <%= @book.status&.capitalize || "Unknown" %>
  </span>
</p>

<% if @book.available? %>
  <%= button_to 'Mark as Taken', mark_as_taken_book_path(@book), method: :patch, class: 'btn btn-danger' %>
<% else %>
  <%= button_to 'Mark as Returned', mark_as_returned_book_path(@book), method: :patch, class: 'btn btn-success' %>
<% end %>

<div class="mt-3">
  <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-warning' %>
  <%= link_to 'Back to Books', books_path, class: 'btn btn-secondary' %>
</div>
